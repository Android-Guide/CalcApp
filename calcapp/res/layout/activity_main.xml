<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="10dp" >

    <EditText
        android:id="@+id/et_xianshi"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:hint="只支持两个数运算,不支持负数" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_num1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="1" />

        <Button
            android:id="@+id/bt_num2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="2" />

        <Button
            android:id="@+id/bt_num3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="3" />

        <Button
            android:id="@+id/bt_shanchu"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="删除" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_num4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="4" />

        <Button
            android:id="@+id/bt_num5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="5" />

        <Button
            android:id="@+id/bt_num6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="6" />

        <Button
            android:id="@+id/bt_jia"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_num7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="7" />

        <Button
            android:id="@+id/bt_num8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="8" />

        <Button
            android:id="@+id/bt_num9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="9" />

        <Button
            android:id="@+id/bt_jian"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_num0"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="0" />

        <Button
            android:id="@+id/bt_dian"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="." />

        <Button
            android:id="@+id/bt_cheng"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="×" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dengyu"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:text="=" />

        <Button
            android:id="@+id/bt_chu"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="÷" />
    </LinearLayout>

</LinearLayout>